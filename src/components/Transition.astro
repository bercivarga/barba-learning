---
const cellCount = 100;
---

<div class="transition">
  {
    new Array(cellCount).fill(0).map((_, i) => {
      return <div class="transition__cell" />;
    })
  }
</div>

<style>
  .transition {
    display: grid;
    grid-template-columns: repeat(10, 1fr);
    grid-template-rows: repeat(10, 1fr);
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    display: none;
    overflow: hidden;
    z-index: 100;
  }

  .transition__cell {
    background: #000;
    opacity: 0;
    transition: opacity 0.1s;
    padding: 0;
  }
</style>
